@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Tổng sản phẩm</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.TongSanPham</h4>
                <p class="card-text">Số sản phẩm trong hệ thống</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Tổng khách hàng</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.TongKhachHang</h4>
                <p class="card-text">Khách hàng đã đăng ký</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Tổng đơn hàng</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.TongDonHang</h4>
                <p class="card-text">Đơn hàng đã được tạo</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Quản lý nhanh</h5>
            </div>
            <div class="card-body">
                <a href="@Url.Action("Index", "AdminSanPham")" class="btn btn-primary mr-2">Quản lý sản phẩm</a>
                <a href="@Url.Action("Index", "AdminDonHang")" class="btn btn-success mr-2">Quản lý đơn hàng</a>
                <button class="btn btn-warning" onclick="alert('Chức năng đang phát triển')">Quản lý khách hàng</button>
            </div>
        </div>
    </div>
</div>